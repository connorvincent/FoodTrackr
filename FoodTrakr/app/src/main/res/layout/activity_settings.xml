<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foodtrakr.foodtrakr.Settings"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageButton
        android:id="@+id/invBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/recBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/recBtn"
        app:layout_constraintTop_toTopOf="@+id/recBtn"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/clipboard"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/setBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/calBtn"
        app:layout_constraintLeft_toRightOf="@+id/calBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/calBtn"
        app:srcCompat="@drawable/settings"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/calBtn"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginEnd="96dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/calendar"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="96dp" />

    <ImageButton
        android:id="@+id/recBtn"
        android:layout_width="96dp"
        android:layout_height="0dp"
        android:layout_marginEnd="96dp"
        android:layout_marginStart="96dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/recipes"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/calBtn"
        app:layout_constraintRight_toRightOf="@+id/calBtn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/calBtn"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="96dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="32dp"
        android:textColor="#000000"/>
</android.support.constraint.ConstraintLayout>
